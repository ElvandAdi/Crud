<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard">


    <EditText
        android:id="@+id/et_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="alamat"
        app:layout_constraintEnd_toEndOf="@+id/et_nama"
        app:layout_constraintStart_toStartOf="@+id/et_nama"
        app:layout_constraintTop_toBottomOf="@+id/et_nama" />
    <EditText
        android:id="@+id/et_jumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Jumlah"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/et_alamat"
        app:layout_constraintStart_toStartOf="@+id/et_alamat"
        app:layout_constraintTop_toBottomOf="@+id/et_alamat" />
    <EditText
        android:id="@+id/et_tanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tanggal"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/et_jumlah"
        app:layout_constraintStart_toStartOf="@+id/et_jumlah"
        app:layout_constraintTop_toBottomOf="@+id/et_jumlah" />
    <EditText
        android:id="@+id/et_kembali"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tanggal Kembali"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/et_tanggal"
        app:layout_constraintStart_toStartOf="@+id/et_tanggal"
        app:layout_constraintTop_toBottomOf="@+id/et_tanggal" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="SAVE"
        android:background="@drawable/custom_button"
        app:layout_constraintEnd_toEndOf="@+id/et_kembali"
        app:layout_constraintStart_toStartOf="@+id/et_kembali"
        app:layout_constraintTop_toBottomOf="@+id/et_kembali" />

    <ListView
        android:id="@+id/lv_htg"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:layout_marginTop="352dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp"></ListView>


</androidx.constraintlayout.widget.ConstraintLayout>
